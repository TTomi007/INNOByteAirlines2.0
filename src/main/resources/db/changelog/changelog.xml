<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
		http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="initdb" author="ttomi007">
        <createTable tableName="Airline">
            <column name="Id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="Name" type="nvarchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="City">
            <column name="Id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="Name" type="nvarchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="Population" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="Flight">
            <column name="Id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="Airline_id" type="int">
                <constraints nullable="false"
                             foreignKeyName="fk_flight_airline"
                             referencedTableName="Airline"
                             referencedColumnNames="Id"/>
            </column>
            <column name="Start_city_id" type="int">
                <constraints nullable="false"
                             foreignKeyName="fk_flight_start_city"
                             referencedTableName="City"
                             referencedColumnNames="Id"/>
            </column>
            <column name="Arrive_city_id" type="int">
                <constraints nullable="false"
                             foreignKeyName="fk_flight_arrive_city"
                             referencedTableName="City"
                             referencedColumnNames="Id"/>
            </column>
            <column name="Distance" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="Journey_time" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addAutoIncrement
                columnDataType="int"
                columnName="Id"
                startWith="1000"
                tableName="Airline"/>
        <addAutoIncrement
                columnDataType="int"
                columnName="Id"
                startWith="1000"
                tableName="City"/>
        <addAutoIncrement
                columnDataType="int"
                columnName="Id"
                startWith="1000"
                tableName="Flight"/>
    </changeSet>
    <changeSet id="inittestdata" author="ttomi007">
